	<!-- Package as an executable jar -->
	<build>
		<finalName>indu-hive2-api</finalName>
		<plugins>
			<!-- 打JAR包 -->
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-jar-plugin</artifactId>
					<configuration>
						<!-- 不打包资源文件（配置文件和依赖包分开） -->
						<excludes>
							<exclude>*.**</exclude>
							<exclude>*/*.xml</exclude>
						</excludes>
						<archive>
							<manifest>
								<addClasspath>true</addClasspath>
								<!-- MANIFEST.MF 中 Class-Path 加入前缀 -->
								<classpathPrefix>lib/</classpathPrefix>
								<!-- jar包不包含唯一版本标识 -->
								<useUniqueVersions>false</useUniqueVersions>
								<!--指定入口类 -->
								<mainClass>com.embraces.hive.HiveMain</mainClass>
							</manifest>
							<manifestEntries>
								<!--MANIFEST.MF 中 Class-Path 加入资源文件目录 -->
								<Class-Path>./resources/ lib/hive-accumulo-handler-3.1.0-bc3.0.1.jar lib/hive-beeline-3.1.0-bc3.0.1.jar lib/hive-classification-3.1.0-bc3.0.1.jar lib/hive-cli-3.1.0-bc3.0.1.jar lib/hive-common-3.1.0-bc3.0.1.jar lib/hive-contrib-3.1.0-bc3.0.1.jar lib/hive-druid-handler-3.1.0-bc3.0.1.jar lib/hive-exec-3.1.0-bc3.0.1.jar lib/hive-hbase-handler-3.1.0-bc3.0.1.jar lib/hive-hcatalog-core.jar lib/hive-hcatalog-core-3.1.0-bc3.0.1.jar lib/hive-hcatalog-server-extensions-3.1.0-bc3.0.1.jar lib/hive-hplsql-3.1.0-bc3.0.1.jar lib/hive-jdbc-3.1.0-bc3.0.1.jar lib/hive-jdbc-handler-3.1.0-bc3.0.1.jar lib/hive-kryo-registrator-3.1.0-bc3.0.1.jar lib/hive-llap-client-3.1.0-bc3.0.1.jar lib/hive-llap-common-3.1.0-bc3.0.1.jar lib/hive-llap-common-3.1.0-bc3.0.1-tests.jar lib/hive-llap-ext-client-3.1.0-bc3.0.1.jar lib/hive-llap-server-3.1.0-bc3.0.1.jar lib/hive-llap-tez-3.1.0-bc3.0.1.jar lib/hive-metastore-3.1.0-bc3.0.1.jar lib/hive-serde-3.1.0-bc3.0.1.jar lib/hive-service-3.1.0-bc3.0.1.jar lib/hive-service-rpc-3.1.0-bc3.0.1.jar lib/hive-shims-0.23-3.1.0-bc3.0.1.jar lib/hive-shims-3.1.0-bc3.0.1.jar lib/hive-shims-common-3.1.0-bc3.0.1.jar lib/hive-shims-scheduler-3.1.0-bc3.0.1.jar lib/hive-standalone-metastore-3.1.0-bc3.0.1.jar lib/hive-storage-api-2.7.0.jar lib/hive-streaming-3.1.0-bc3.0.1.jar lib/hive-testutils-3.1.0-bc3.0.1.jar lib/hive-upgrade-acid-3.1.0-bc3.0.1.jar lib/hive-vector-code-gen-3.1.0-bc3.0.1.jar lib/zookeeper-3.5.2-bc3.0.1.jar</Class-Path>
							</manifestEntries>
						</archive>
						<outputDirectory>${project.build.directory}</outputDirectory>
					</configuration>
				</plugin>

				<!-- 该插件的作用是用于复制依赖的jar包到指定的文件夹里 -->
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-dependency-plugin</artifactId>
					<executions>
						<execution>
							<id>copy-dependencies</id>
							<phase>package</phase>
							<goals>
								<goal>copy-dependencies</goal>
							</goals>
							<configuration>
								<outputDirectory>${project.build.directory}/lib/</outputDirectory>
							</configuration>
						</execution>
					</executions>
				</plugin>

				<!-- 该插件的作用是用于复制指定的文件 -->
				<plugin>
					<artifactId>maven-resources-plugin</artifactId>
					<executions>
						<execution> <!-- 复制配置文件 -->
							<id>copy-resources</id>
							<phase>package</phase>
							<goals>
								<goal>copy-resources</goal>
							</goals>
							<configuration>
								<resources>
									<resource>
										<directory>src/main/resources</directory>
										<includes>
											<!-- <include>*.properties</include> -->
										</includes>
									</resource>
								</resources>
								<outputDirectory>${project.build.directory}/resources</outputDirectory>
							</configuration>
						</execution>
					</executions>
				</plugin>

				<!-- SpringBoot 打包插件，把 maven-jar-plugin 打成的jar包重新打成可运行jar包 -->
				<plugin>
					<groupId>org.springframework.boot</groupId>
					<artifactId>spring-boot-maven-plugin</artifactId>
					<configuration>
						<!--重写包含依赖，包含不存在的依赖，jar里没有pom里的依赖 -->
						<includes>
							<include>
								<groupId>null</groupId>
								<artifactId>null</artifactId>
							</include>
						</includes>
						<layout>ZIP</layout>
						<!--使用外部配置文件，jar包里没有资源文件 -->
						<addResources>true</addResources>
						<outputDirectory>${project.build.directory}/resources</outputDirectory>
					</configuration>
					<executions>
						<execution>
							<goals>
								<goal>repackage</goal>
							</goals>
							<configuration>
								<!--配置jar包特殊标识 配置后，保留原文件，生成新文件 *-run.jar -->
								<!--配置jar包特殊标识 不配置，原文件命名为 *.jar.original，生成新文件 *.jar -->
								<!--<classifier>run</classifier> -->
							</configuration>
						</execution>
					</executions>
				</plugin>
		</plugins>
	</build>
</project>

